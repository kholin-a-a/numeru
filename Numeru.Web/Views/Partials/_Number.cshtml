@model int

<style>
    .moment__number {
        position: relative;
        height: 250px;
    }

        .moment__number img {
            position: absolute;
            margin-left: auto;
            margin-right: auto;
            left: 0;
            right: 0;
            text-align: center;
            width: 250px;
            /*animation: rotate 60s linear infinite;*/
            opacity: 0.55;
        }

    @@keyframes rotate {
        from {
            transform: rotate(0);
        }

        to {
            transform: rotate(360deg);
        }
    }

    .moment__number__value {
        position: absolute;
        text-shadow: 5px 5px 10px black;
        font-size: 5rem;
        font-weight: 500;
    }
</style>

<div class="moment__number d-flex align-items-center justify-content-center w-100">
    <img src="~/img/seal_2.svg" />

    <div class="moment__number__value">
        @Model
    </div>
</div>