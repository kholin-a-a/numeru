@model MomentIndexViewModel;

@{
    ViewData["Title"] = "Момент";
}

<div>
    Нумерология момента Вашего нахождения здесь предскажет Ваше будущее
</div>

<div>
    <div>
        <div>
            @Model.Number
        </div>

        <div>
            Число момента
        </div>
    </div>

    <div>
        <div>
            <div>
                Дата
            </div>
            <div>
                @Model.Date
            </div>
        </div>

        <div>
            <div>
                Время
            </div>
            <div>
                @Model.Date
            </div>
        </div>

        <div>
            <button>
                Обновить
            </button>

            <div>
                Обратитесь к вселенной с волнующим Вас вопросом
            </div>
        </div>
    </div>

    <div>
        @{
            if (Model.DominantNumber)
            {
                <div>
                    <strong>Господствующее число</strong>- благоприятный знак
                </div>
            }
        }
        @{
            if (Model.KarmicNumber)
            {
                <div>
                    <strong>Кармическое число</strong>- благоприятный знак
                </div>
            }
        }
        <div>
            @Model.Prediction
        </div>

        <div>
            <label>Рассчет</label>

            <div>
                @foreach (var line in Model.Calculation)
                {
                    <div>@line</div>
                }
            </div>
        </div>
    </div>
</div>