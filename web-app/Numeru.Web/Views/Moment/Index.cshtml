@model MomentIndexViewModel

@{
    ViewData["Title"] = "Момент";
    ViewData["Route"] = "Moment";
}

@section Head {
    <meta name="description"
          content="Многое зависит не от вас. Узнайте ответ на свой вопрос с помощью нумерологии момента." />

    <vc:open-graph title="Нумерология момента"
                   description="Многое зависит не от вас. Узнайте ответ на свой вопрос с помощью нумерологии момента." />

    <vc:view-styles from="Views/Moment/Index.css" />
}

<div class="block text-center">
    Нумерология момента Вашего нахождения здесь предскажет Ваше будущее.
</div>

<div class="mt-1">
    <div class="block">
        <div class="d-flex justify-content-around">
            <div class="text-center">
                <div>
                    <strong>Дата</strong>
                </div>

                <div class="lead">@Model.Date.ToString("dd.MM.yyyy")</div>
            </div>

            <div class="text-center">
                <div>
                    <strong>Время</strong>
                </div>

                <div class="lead">@Model.Date.ToString("HH:mm:ss")</div>
            </div>
        </div>

        <vc:number number="@Model.Number" />

        <div class="mt-2 lead text-center">
            @Model.Prediction
        </div>

        <div class="mt-4 text-center">
            <a role="button" class="btn btn-outline-light rounded-pill w-100 reload__btn" asp-controller="Moment" asp-action="Index">
                Обновить
            </a>

            <div class="mt-1">
                <small>Обратитесь к вселенной с волнующим Вас вопросом</small>
            </div>
        </div>
    </div>
</div>

<div class="block mt-1">
    <vc:calculation model="@Model.Calculation" />
</div>