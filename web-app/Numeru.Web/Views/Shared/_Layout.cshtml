@functions {
    string ActiveWhen(string route)
    {
        if ((string)ViewData["Route"] == route)
        {
            return "active";
        }

        return "";
    }
}

<!DOCTYPE html>
<html lang="en" prefix="og: http://ogp.me/ns#">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Numeru | @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap-5.0.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/_Layout.css" inline />

    <environment exclude="Development">
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-WDEVMP30YQ"></script>
        <script>
            window.dataLayer = window.dataLayer || [];

            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());
            gtag('config', 'G-WDEVMP30YQ');
        </script>
    </environment>

    @RenderSection("Head", required: false)
</head>

<body class="pb-3">
    <header>
        <nav class="navbar mb-3 transparent-dark d-flex align-items-center justify-content-between">
            <a class="navbar-brand logo d-flex align-items-center ps-2 navbar__left" href="/">
                <img class="d-block d-lg-none" src="~/img/logo_64_64_trasparent.png" />

                <div class="site-name d-none d-lg-block ms-2">
                    Numeru
                </div>
            </a>

            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link @ActiveWhen("Moment")" asp-controller="Moment" asp-action="Index">Момент</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @ActiveWhen("Destiny")" asp-controller="Destiny" asp-action="Index">Судьба</a>
                </li>
            </ul>

            <div class="navbar__right">
                <!-- empty -->
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/bootstrap-5.0.1/js/bootstrap.min.js"></script>

    @RenderSection("Body", required: false)
</body>
</html>
